<div id="ticket_asset">
  <% if @ticket.assets.exists? %>
      <h3>Attached Files</h3>

      <div class="assets">
        <% @ticket.assets.each do |asset| %>
            <p>
              <%= link_to File.basename(asset.asset_file_name), asset.asset.url %>
              <small>
                <%= number_to_human_size(asset.asset.size) %>(<%= asset.asset_content_type %>)
              </small>
            </p>
        <% end %>
      </div>
  <% end %>
</div>
