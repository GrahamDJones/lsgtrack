<div id="ticket">
  <h2><%= "Ticket: " + @ticket.title %></h2>
  <%= link_to "Project: #{@project.name}", @project %>
  <%= authorized?("edit tickets", @project) do %>
      <%= link_to 'Edit Ticket', [:edit, @project, @ticket] %>
  <% end %>
  <%= authorized?("delete tickets", @project) do %>
      <%= link_to 'Delete Ticket', [@project, @ticket], method: :delete,
                  confirm: "Are you sure you want to delete this ticket?" %>
  <% end %>

  <br>
  <small>Created by <%= @ticket.user.email %></small>
  <%= render :partial => "states/ticket_state", :locals => { state: @ticket.state } if @ticket.state %>
  <%= simple_format(@ticket.description) %>
  <div id="tags"><%= render @ticket.tags %></div>
  <div id="time_spent"><%= @ticket.time_spent %></div>
  <% if @ticket.assets.exists? %>
      <h3>Attached Files</h3>

      <div class="assets">
        <% @ticket.assets.each do |asset| %>
            <p>
              <%= link_to File.basename(asset.asset_file_name), asset.asset.url %>
              <small>
                <%= number_to_human_size(asset.asset.size) %>(<%= asset.asset_content_type %>)
              </small>
            </p>
        <% end %>
      </div>
  <% end %>
</div>
<div id="watchers">
  <%= toggle_watching_button %>
  <h4>Watchers</h4>
  <ul>
    <% @ticket.watchers.each do |watcher| %>
        <li id="awatcher"><%= watcher %></li>
    <% end %>
  </ul>
</div>

<h3>Comments</h3>
<div id="comments">
  <% if @ticket.comments.exists? %>
      <%= render @ticket.comments.select(&:persisted?) %>
  <% else %>
      There are no comments for this ticket.
  <% end %>
</div>

<%= render "comments/form" %>
