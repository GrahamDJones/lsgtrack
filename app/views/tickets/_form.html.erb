<%= form_for [@project, @ticket], html: { multipart: true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>
    <% fileno = 0 %>
    <div id="files">
    <%= f.fields_for :assets, child_index: fileno do |asset| %>
    <p>
      <%= asset.label :asset, "File ##{fileno += 1}" %><br>
      <%= asset.file_field :asset %>
    </p>
    <% end %>
    </div>
  <%= f.submit %>
<% end %>